<div class="cover{{#if @site.cover_image}} image-loading{{/if}}{{#match @custom.publication_cover_style "Half screen"}} half{{/match}}">
    {{#if @site.cover_image}}
        <img class="cover-image u-object-fit" src="{{@site.cover_image}}" alt="{{@site.title}}">
    {{/if}}

    <div class="cover-content container">
        {{#if @site.description}}
            <div class="cover-description">
                {{#if @custom.email_signup_text}}
                    {{@custom.email_signup_text}}
                {{else}}
                    {{@site.description}}
                {{/if}}
            </div>
            
            {{#if @custom.email_signup_desc}}
                <div class="cover-description-subtext">{{@custom.email_signup_desc}}</div>
            {{/if}}
        {{/if}}

        {{#unless @member}}
            <form class="form-wrapper cover-form inline-form" data-members-form>
                <input class="auth-email" type="email" data-members-email placeholder="Your email..." required="true" autocomplete="false">
                {{#if @custom.email_signup_small}}
                    <div class="cover-description-smalltext">{{@custom.email_signup_small}}</div>
                {{/if}}

                <button class="form-button" type="submit" aria-label="Submit">
                    <span class="default">Just try it</span>
                    <span class="loader">{{> icons/loader}}</span>
                    <span class="success">Email sent</span>
                </button>
            </form>
        {{/unless}}
    </div>

    <button class="button-icon cover-arrow">
        {{> icons/chevron-right}}
    </button>
</div>