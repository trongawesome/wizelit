<header id="site-header" class="site-header kg-canvas">
    <div class="header-inner kg-width-wide">
        <div class="header-brand">
            <a class="logo" href="{{@site.url}}">
                {{#if @site.logo}}
                    <img class="logo-image" src="{{@site.logo}}" alt="{{@site.title}}">
                {{else}}
                    <span class="logo-text">{{@site.title}}</span>
                {{/if}}
            </a>

            <div class="burger">
                <div class="burger-bar"></div>
                <div class="burger-bar"></div>
            </div>
        </div>

        <div class="header-actions">

            <nav class="header-nav">
                {{#if @site.navigation}}
                    {{navigation}}
                {{/if}}
            </nav>
            
            <div class="social">
                <a class="social-item social-item-facebook"
                    href="#"
                    aria-label="Search"
                    data-ghost-search >
                    {{> icons/search}}
                </a>
                {{#if @site.facebook}}
                    <a class="social-item social-item-facebook"
                        href="{{facebook_url @site.facebook}}" target="_blank"
                        rel="noopener noreferrer" aria-label="Facebook">
                        {{> icons/facebook}}
                    </a>
                {{/if}}

                {{!-- <a class="social-item social-item-facebook"
                    href="https://www.instagram.com/vidizaicom/" target="_blank"
                    rel="noopener noreferrer" aria-label="Instagram">
                    {{> icons/ig}}
                </a> --}}

                {{#if @site.twitter}}
                    <a class="social-item social-item-twitter"
                        href="{{twitter_url @site.twitter}}" target="_blank"
                        rel="noopener noreferrer" aria-label="Twitter">
                        {{> icons/twitter}}
                    </a>
                {{/if}}
            </div>

            {{!-- {{#if @member}}
                <button class="button-text menu-item members-account" data-portal="account">Account</button>
            {{else}}
                <button class="button-text menu-item members-login" data-portal="signin">Login</button>
                <button class="button-text menu-item members-subscribe" data-portal="signup">Subscribe</button>
            {{/if}} --}}
        </div>
    </div>
</header>