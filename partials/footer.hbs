<footer class="site-footer kg-canvas">
    <div class="footer-inner kg-width-content">
        <div class="footer-image">
            <img class="footer-image" src="/assets/images/later-plant-animation.gif" alt="{{@site.title}}">
        </div>
        <a class="footer-logo" href="{{@site.url}}">
            {{#if @site.logo}}
                <img class="logo-image" src="{{@site.logo}}" alt="{{@site.title}}">
            {{else}}
                <span class="logo-text">{{@site.title}}</span>
            {{/if}}
        </a>

        <div class="footer-right">
            <div class="social">
                {{#if @site.facebook}}
                    <a class="social-item social-item-facebook"
                        href="{{facebook_url @site.facebook}}" target="_blank"
                        rel="noopener noreferrer" aria-label="Facebook">
                        {{> icons/facebook}}
                    </a>
                {{/if}}

                {{#if @site.twitter}}
                    <a class="social-item social-item-twitter"
                        href="{{twitter_url @site.twitter}}" target="_blank"
                        rel="noopener noreferrer" aria-label="Twitter">
                        {{> icons/twitter}}
                    </a>
                {{/if}}
            </div>
        </div>

        <nav class="footer-nav">
            {{navigation type="secondary"}}
            <a class="menu-item badge" href="https://ghost.org/" target="_blank" rel="noopener noreferrer">Built with Ghost</a>
        </nav>

        <div class="footer-left">
            <div class="copyright">
                Â© {{date format="YYYY"}} 
            </div>
            <div class="copyright">
                As an Amazon Associate, we earn from qualifying purchases.
            </div>
        </div>

    </div>
</footer>